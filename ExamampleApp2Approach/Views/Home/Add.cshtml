@model ExampleApp.Model.HardwareModel

@{
    ViewData["Title"] = "Add Hardware";
}

<h1>Add hardware</h1>

<form method="post">

    <div class="form-group">
        <label>Nazwa</label>
        <input type="text" class="form-control" asp-for="Hardware.Name"/>
    </div>
    <div class="form-group">
        <label>Firma</label>
        <select class="form-control" asp-for="Hardware.CompanyId" asp-items="@ViewBag.Companies"></select>
    </div>
    <div class="form-group">
        <label>Rok</label>
        <input type="text" class="form-control" asp-for="Hardware.Year"></input>
    </div>


    <div class="form-group">
        <label>Cena</label>
        <input type="text" class="form-control" asp-for="Hardware.Price"/>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>


</form>